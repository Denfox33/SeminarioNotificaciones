<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetalleActivity"
    android:orientation="horizontal"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <ImageView
        android:id="@+id/icMsn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/baseline_message_24" />

    <TextView
        android:id="@+id/txtmsn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/icMsn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/icMsn"
        android:text="Mensasjes"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/icMsn"
        app:layout_constraintStart_toEndOf="@id/txtmsn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="now"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/btnOcultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/baseline_arrow_drop_down_24"
        android:text="Ocultar"

        app:layout_constraintStart_toEndOf="@id/tvTiempo"
        app:layout_constraintTop_toTopOf="@id/tvTiempo" />



    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="70dp"
      android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/icMsn"
        android:layout_gravity="center_vertical"
        android:src="@drawable/baseline_public_24" />


  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_marginStart="10dp"

    >
    <TextView
        android:id="@+id/tvMensaje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="La persona te ha mandado algo"
        android:textSize="16sp" />


  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
      android:layout_marginStart="10dp"
      >
    <TextView
        android:id="@+id/tvMensaje2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Nombre y apellidos"
        android:textSize="16sp" />
  </LinearLayout>
</RelativeLayout>